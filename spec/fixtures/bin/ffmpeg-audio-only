  $stderr.puts <<-OUTPUT
  Stream mapping:
    Stream #0:1 -> #0:0 (aac -> libmp3lame)
  Press [q] to stop, [?] for help
OUTPUT
  3.times do 
    $stderr.write "size=   51953kB time=02:27:46.48 bitrate=  48.0kbits/s\r"
    sleep 0.5 
  end
else
  $stderr.puts "At least one output file must be specified"
